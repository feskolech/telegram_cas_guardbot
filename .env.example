BOT_TOKEN=REPLACE_ME
DB_PATH=/data/bot.sqlite3
BANNED_LOG_PATH=/data/banned.txt

# recheck "seen" users
RECHECK_INTERVAL=1m

# refresh sources (both lists)
UPDATE_EXPORT_INTERVAL=30m
UPDATE_LOLS_INTERVAL=30m

# how many message_id to keep per user for deletions
MESSAGE_CACHE_LIMIT=50

# how many days to keep seen_users (then prune)
SEEN_TTL_DAYS=7

# HTTP timeouts
HTTP_TIMEOUT_SECONDS=15

# CAS API check cache TTL
CAS_CACHE_TTL=10m
# CAS circuit breaker cooldown after errors/timeouts
CAS_COOLDOWN_SEC=60

# optional admin dashboard
ADMIN_ENABLED=false
ADMIN_TOKEN=REPLACE_ME
ADMIN_PORT=9005
# auth mode: token | telegram | both
ADMIN_AUTH_MODE=token
# telegram oauth (required when ADMIN_AUTH_MODE includes telegram)
ADMIN_PUBLIC_URL=https://admin.example.com
ADMIN_TELEGRAM_BOT_USERNAME=your_bot_username
ADMIN_TELEGRAM_BOT_TOKEN=
ADMIN_TELEGRAM_IDS=123456789,987654321
ADMIN_SESSION_SECRET=REPLACE_ME
ADMIN_SESSION_TTL_SEC=43200
ADMIN_TELEGRAM_AUTH_MAX_AGE_SEC=86400
